<header class="p-3 bg-nav ">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="<%=root_path%>" class="text-center mb-md-2 mb-sm-2 col-md-12 col-sm-12 col-lg-1">
        <img src="https://i.imgur.com/6adz7vV.png" alt="logo"  width="50" height="50" >
      </a>
      <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
      </ul>
     
      <div class="text-end">

      <%  if user_signed_in? %>

        <%# Navbar administrateur  %>
        <%  if current_user && current_user.admin %>
        <%= link_to 'Dashboard', admin_root_path, class:"btn btn-nav me-2" %>
        <% end %>
  
        <%# Navbar utilisateur %>
        <%= link_to "Mon compte", edit_user_registration_path, class:"btn btn-nav me-2" %>
        <%= link_to "Log-out", destroy_user_session_path , method: :delete, class:"btn btn-signup"%>
      <%else%>
        <%= link_to "Log-in", new_user_session_path , class:"btn btn-nav me-2"%>
        <%= link_to "Sign-up", new_user_registration_path , class:"btn btn-signup"%>
      <% end %>

      </div>
    </div>
  </div>
</header>