<section class="section">
  <div class="has-text-centered box">
    <h1 class="title">Abonnements</h1>
    <h2 class="subtitle">Abonnez-vous au Brignolais Sportif pour un mois, six mois ou pour un an !</h2>
    <div class="pricing-table">
      <div class="pricing-plan is-warning">
        <div class="plan-header">Mensuel</div>
        <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">€</span>3</span>&nbsppar mois</div>
        <div class="plan-items">
          <div class="plan-item">Un Mois</div>
        </div>
        <div class="plan-footer">
          <% if user_signed_in? %>
            <%= link_to "S'abonner", new_subscription_path(plan: "one_month", plan_id: Rails.application.credentials.one_month), class:"button is-fullwidth" %>
          <% else %>
            <%= link_to "S'abonner", new_user_registration_path, class: 'button is-fullwidth' %>
         <% end %>
        </div>
      </div>
      <div class="pricing-plan is-link is-active">
        <div class="plan-header">Biannuel</div>
        <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">€</span>15</span>&nbsptout les 6 mois</div>
        <div class="plan-items">
          <div class="plan-item">Six Mois</div>
        </div>
        <div class="plan-footer">
           <% if user_signed_in? %>
            <%= link_to "S'abonner", new_subscription_path(plan: "six_months", plan_id: Rails.application.credentials.six_months), class:"button is-fullwidth" %>
          <% else %>
            <%= link_to "S'abonner", new_user_registration_path, class: 'button is-fullwidth' %>
         <% end %>
        </div>
      </div>
      <div class="pricing-plan is-danger">
        <div class="plan-header">Annuel</div>
        <div class="plan-price"><span class="plan-price-amount"><span class="plan-price-currency">€</span>25</span>&nbsppar an</div>
        <div class="plan-items">
          <div class="plan-item">Un an</div>
        </div>
        <div class="plan-footer">
         <% if user_signed_in? %>
            <%= link_to "S'abonner", new_subscription_path(plan: "one_year", plan_id: Rails.application.credentials.one_year), class:"button is-fullwidth" %>
          <% else %>
            <%= link_to "S'abonner", new_user_registration_path, class: 'button is-fullwidth' %>
         <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
