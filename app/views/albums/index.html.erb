<div class="container">
  <p id="notice"><%= notice %></p>
</div>
<div class="container">
  <h1>Albums</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Category</th>
        <th>Link to</th>
        <th>Image url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.category %></td>
        <td><%= album.link_to %></td>
        <td><%= album.image_url %></td>
        <td><%= link_to "Voir l'album", album %></td>
        <td><%= link_to "Modifier l'album", edit_album_path(album) %></td>
        <td><%= link_to "Effacer l'album", album, method: :delete, data: { confirm: 'Etes-vous sÃ»r?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nouvel album', new_album_path %>
</div>
