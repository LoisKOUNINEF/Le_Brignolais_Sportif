<div class="container">
  <p id="notice"><%= notice %></p>
</div>
<div class="container">
  <h1>Albums</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @albums.each do |album| %>
      <tr>
        <td><%= album.title %></td>
        <td><%= album.category %></td>
        <td><%= image_tag album.image_url %></td>
        <td><%= album.link_to %></td>
        <td><%= link_to "Voir l'album", album %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
