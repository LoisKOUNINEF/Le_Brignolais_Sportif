<div class="section">
  <div class="column-is-centered">
    <div class="column is-6 border pa5">
      <h1 class="title is-3">S'abonner</h1>
      <hr/>
      <p>Abonnement choisi : <strong><%= params[:plan] %></strong></p>
      <hr/>
      <%= form_tag subscriptions_path, method:"post", id: "payment-form" do |form| %>
        <div class="field">
          <label for="card-element" class="label">Entrez vos informations de paiement</label>

          <div id="card-element">
          </div>

          <div id="card-errors" role="alert"></div>

          <%= hidden_field_tag :plan_id, params[:plan_id] %>

          <button class="button is-fullwidth is-link mt4">S'abonner</button>

        </div>
      <% end %>
    </div>
  </div>
</div>
