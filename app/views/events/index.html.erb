<div class="container">
  <p id="notice"><%= notice %></p>
</div>

<div class="container">
  <h1>Events</h1>

  <table>
    <thead>
      <tr>
        <th>Titre</th>
        <th>Categorie</th>
        <th>Illustration</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.category %></td>
        <td><%= event.image_url %></td>
        <td><%= link_to "Voir l'événement", event %></td>
        <td><%= link_to "Modifier", edit_event_path(event) %></td>
        <td><%= link_to "Supprimer", event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nouvel événement', new_event_path %>
</div>
