<div class="container">
<p id="notice"><%= notice %></p>
  <h1>Evénements</h1>

  <table>
    <thead>
      <tr>
        <th>Titre</th>
        <th>Categorie</th>
        <th>Illustration</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.category %></td>
        <td><%= image_tag event.image_url %></td>
        <td><%= link_to "Voir l'événement", event %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>
