<%# Navbar administrateur  %> 
<%#  the id notice is shared among all pages   %> 
<div class="container">
   <div class="row">

      <!-- Blog entries-->

      <div class="text-center">
         <h1>Les dernières publications</h1>
         <hr>
      </div>   
      <div class="col-lg-8">

      
         <% @articles.reverse.each do |article| %>
         <div class="card mb-4 img-box">
                 <%= image_tag article.image_url %>
               <div class="card-body">
                  <div class="small text-muted b"><%= article.created_at %></div>
                  <h2 class="card-title b"><%= article.title.html_safe %></h2>
                  <p class="card-text b"><%=  truncate(article.content.html_safe, length:100) %></p>
                  <%= link_to "Lire la suite →", article, class:"btn btn-primary" %>
               </div>
            <br>
         </div>
         <% end %>
      </div>

         <!-- Latests articles -->

         <div class="col-lg-4">
            <div class="card border-light mb-4" style="max-width: 18rem;" >
               <div class="card-header b">Dernières publications</div>

               <div class="card-body b">
                   <% @articles.reverse.each do |article| %>
                   <tr>
                   <td>	<%= link_to article.title , article_path(article.id) %></td>
                   </tr><br><br>
                   <% end %>
               </div>
            </div>

         <!-- Side widget-->
         <% 3.times do %>
          <div class="card" style="max-width: 18rem;">
            <div class="card-body">
              <%= image_tag (Partner.all.sample).image_url, size: 75*50 %>
            </div>
         </div>
         <% end %>
         <!-- Partners display-->
      </div>
   </div>
</div>
