<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Articles</h1>

  <table style="display: inline-block">
    <thead>
      <tr>
        <th class="btn btn-nav2 btn-card my-5">Titre&nbsp;&nbsp;</th>
        <th class="btn btn-nav2 btn-card my-5">Categorie&nbsp;&nbsp;</th>
        <th class="btn btn-nav2 btn-card my-5">Contenu&nbsp;&nbsp;</th>
        <th class="btn btn-nav2 btn-card my-5">Illustration</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.category %></td>
        <td><%= article.content %></td>
        <td><%= article.image_url %></td>
        <td><%= link_to "Lire", article %></td>
        <td><%= link_to "Modifier", edit_article_path(article) %></td>
        <td><%= link_to "Effacer l'article", article, method: :delete, data: { confirm: "Etes-vous sÃ»r?" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Articles", articles_path %>
  <%= link_to "Albums", albums_path %>
  <%= link_to "Clubs", clubs_path %>
  <%= link_to "Partenaires", partners_path %>
</div>