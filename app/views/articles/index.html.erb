 <%# Navbar administrateur  %> 
 <%#  la notice est commune Ã  toute les pages   %> 
 <div class="container">

  <p id="notice"><%= notice %></p>
  
  <h1>Articles</h1>

  <table style="display: inline-block">
    <thead>
      <tr>
        <th>Titre&nbsp;&nbsp;</th>
        <th>Categorie&nbsp;&nbsp;</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.category %></td>
        <td><%= image_tag article.image_url %></td>
        <td><%= article.content %></td>
        <td class="btn btn-secondary"><%= link_to "Lire", article %></td>
      </tr>
      <% end %>
      
    </tbody>
  </table>

  <br>

  <%= link_to "Articles", articles_path %>
  <%= link_to "Albums", albums_path %>
  <%= link_to "Clubs", clubs_path %>
  <%= link_to "Agenda", events_path %>
  <%= link_to "Partenaires", partners_path %>
</div>
