<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Articles</h1>

  <table>
    <thead>
      <tr>
        <th>Titre&nbsp;&nbsp;</th>
        <th>Categorie&nbsp;&nbsp;</th>
        <th>Contenu&nbsp;&nbsp;</th>
        <th>Illustration</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.category %></td>
        <td><%= article.content %></td>
        <td><%= article.image_url %></td>
        <td><%= link_to "Lire", article %></td>
        <td><%= link_to "Modifier", edit_article_path(article) %></td>
        <td><%= link_to "Effacer l'article", article, method: :delete, data: { confirm: "Etes-vous sÃ»r?" } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to "Nouvel article", new_article_path %>
</div>
