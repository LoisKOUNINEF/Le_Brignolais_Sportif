<div class="container">
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Titre :</strong>
    <%= @article.title %>
  </p>

  <p>
    <strong>Categorie :</strong>
    <%= @article.category %>
  </p>

  <p>
    <%= image_tag @article.image_url %>
  </p>

  <p>
    <%= @article.content %>
  </p>

  <%= render partial: "comments/comments", locals: {commented_on: @article, parent: nil} %>
  <% if current_user && current_user.subscriber %>
  <%= render partial: "comments/form", locals: {commented_on: @article, parent: nil} %>
  <%= link_to "Commenter", new_article_comment_path(@article) %>
  <% end %>

  <%= link_to "Retour", articles_path %>
</div>
