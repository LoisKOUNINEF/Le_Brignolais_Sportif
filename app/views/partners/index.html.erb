<p id="notice"><%= notice %></p>

<h1>Partners</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @partners.each do |partner| %>
      <tr>
        <td><%= partner.name %></td>
        <td><%= partner.description %></td>
        <td><a href="<%= partner.link_to %>"><%= image_tag partner.image_url, width: 100 %></a></td>
        <td><%= link_to 'Show', partner %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
